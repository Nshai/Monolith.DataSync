<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="MicroService.Workflow"
                   namespace="IntelliFlo.Platform.Services.Workflow.Domain"
                   default-lazy="true"
									 default-access="property"
                   schema="workflow.dbo">

  <class name="TemplateDefinition" table="WF_TTemplateDefinition">

    <id name="Id">
      <generator class="assigned"/>
    </id>
    
    <property name="TenantId" />
    <property name="Name"/>
    <property name="Definition" type="StringClob"/>
    <property name="DateUtc" type="UtcDateTime"/>
    <property name="Version"/>
    
  </class>
</hibernate-mapping>