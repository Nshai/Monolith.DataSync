<?xml version="1.0" encoding="utf-8"?>
<configuration> 
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <sectionGroup name="enyim.com">
      <section name="memcached" type="Enyim.Caching.Configuration.MemcachedClientSection, Enyim.Caching" />
    </sectionGroup>
    <section name="clientConfiguration" type="IntelliFlo.Platform.Http.Client.Impl.ServiceAddressRegistrySection, IntelliFlo.Platform.Client" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <section name="aws" type="Amazon.AWSSection, AWSSDK" />
    <section name="AwsSettingsConfiguration" type=" IntelliFlo.Platform.Config.AwsSettingsConfiguration, IntelliFlo.Platform" />
    <section name="autofac" type="Autofac.Configuration.SectionHandler, Autofac.Configuration" />
    <section name="ResourceServerIdentityConfiguration" type="IntelliFlo.Platform.Http.Identity.Impl.ResourceServerIdentityConfiguration, IntelliFlo.Platform.Http, Version=0.1.0.0, Culture=neutral" />
    <section name="TrustedClientAuthConfiguration" type="IntelliFlo.Platform.Identity.Impl.TrustedClientAuthConfiguration, IntelliFlo.Platform.Security" />
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="Microservice.Workflow.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
  </startup>
  <autofac>
    <modules>
      <module type="IntelliFlo.Platform.NHibernate.NHibernateConfigurationModule, IntelliFlo.Platform.MicroService">
        <parameters>
          <parameter name="readConnectionStringName" value="master" />
          <parameter name="writeConnectionStringName" value="master" />
        </parameters>
      </module>
    </modules>
  </autofac>
  <connectionStrings>
    <clear />
    <add name="master" connectionString="server=(local);database=workflow;Trusted_Connection=True;" />
    <add name="afper" connectionString="server=(local);database=afper;Trusted_Connection=True;" />
  </connectionStrings>
  <clientConfiguration>
    <serviceEndpoints>
      <add name="crm" baseAddress="http://localhost:10083/crm/" />
      <add name="eventmanagement" baseAddress="http://localhost:10083/eventmanagement/" />
      <add name="portfolio" baseAddress="http://localhost:10083/portfolio/" />
      <add name="workflow" baseAddress="http://localhost:10111/" />
    </serviceEndpoints>
  </clientConfiguration>
  <enyim.com>
    <memcached>
      <servers>
        <add address="10.140.2.128" port="11211" />
      </servers>
      <socketPool minPoolSize="10" maxPoolSize="100" connectionTimeout="00:00:10" deadTimeout="00:02:00" />
    </memcached>
  </enyim.com>
  <ResourceServerIdentityConfiguration IssuerName="https://idsrv3.com" SigningCertificateSubject="idsrv3test" IdentityServerBaseUrl="https://localhost:44333" />

  <!-- Configures trusted client authentication. Sets custom token validity period. Section is optional, and default is 30 mins -->
  <TrustedClientAuthConfiguration ValidityPeriodInMinutes="30" />
  
  <!-- AWS SDK config. Defines how we authorize to AWS  -->
  <!--Profile location not used in dev, only when microservice is deployed. Please create your AWS profile via VS toolkit as usual-->
  <!--profilesLocation="C:\aws_service_credentials\credentials"-->
  <aws profileName="dev" />
  <!-- Microservice settings for specifying supported AWS regions -->
  <AwsSettingsConfiguration AwsRegions="eu-west-1" />
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net1211">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
      <!--<factoryAdapter type="Common.Logging.Simple.ConsoleOutLoggerFactoryAdapter, Common.Logging">
        <arg key="level" value="DEBUG" />
        <arg key="showLogName" value="true" />
        <arg key="showDataTime" value="true" />
        <arg key="dateTimeFormat" value="yyyy/MM/dd HH:mm:ss:fff" />
      </factoryAdapter>-->
    </logging>
  </common>
  <log4net debug="false">
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="FATAL" />
        <foreColor value="Red" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="c:\logs\MicroService.Workflow.txt" />
      <param name="AppendToFile" value="false" />
      <param name="RollingStyle" value="Size" />
      <param name="maxSizeRollBackups" value="1" />
      <param name="maximumFileSize" value="10MB" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout, log4net">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="Info" />
      <appender-ref ref="ColoredConsoleAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>
    <logger name="NHibernate">
      <level value="WARN" />
    </logger>
  </log4net>
  <nlog>
    <extensions>
      <add assembly="IntelliFlo.Platform.Logging" />
    </extensions>
    <targets>
      <target name="NLogToLog4NetForwarder" type="NLogToLog4NetForwarder" />
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="NLogToLog4NetForwarder" />
    </rules>
  </nlog>

  <appSettings>
    <add key="enableHibernateProfiler" value="true" />
    <add key="enableHibernateProfilerStackTrace" value="false" />
    <add key="client.certificate.default.subjectname" value="XYZ Company" />
    <!-- AWS credentials and profile -->
    <add key="AWSProfileName" value="dev" />
    <!-- db timeout -->
    <add key="db.timeout" value="30" />
    <add key="cache.use" value="nullcache" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  
  <system.serviceModel>
    <extensions>
      <behaviorExtensions>
        <add name="databaseTracking" type="Microservice.Workflow.Engine.DatabaseTrackingExtensionElement, Microservice.Workflow" />
      </behaviorExtensions>
    </extensions>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <databaseTracking />
          <serviceDebug includeExceptionDetailInFaults="false" />
          <workflowUnhandledException action="AbandonAndSuspend" />
          <workflowIdle timeToUnload="0:00:0" timeToPersist="0:00:0" />
          <etwTracking profileName="HealthMonitoring Tracking Profile" />
          <!--<sqlWorkflowInstanceStore connectionStringName="afper" />-->
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

  <system.diagnostics>
    <sources>
      <source name="System.Activities" switchValue="Warning">
        <listeners>
          <add name="log4net" />
          <remove name="Default" />
        </listeners>
      </source>
      <source name="System.Activities.DurableInstancing" switchValue="Warning">
        <listeners>
          <add name="log4net" />
          <remove name="Default" />
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="log4net" type="Microservice.Workflow.Engine.Log4NetTraceListener, Microservice.Workflow" />
    </sharedListeners>
  </system.diagnostics>
  
  <system.web>
    <membership defaultProvider="ClientAuthenticationMembershipProvider">
      <providers>
        <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" />
      </providers>
    </membership>
    <roleManager defaultProvider="ClientRoleProvider" enabled="true">
      <providers>
        <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400" />
      </providers>
    </roleManager>
  </system.web>
  <applicationSettings>
    <Microservice.Workflow.Properties.Settings>
      <setting name="Instance" serializeAs="String">
        <value>01</value>
      </setting>
      <setting name="Environment" serializeAs="String">
        <value>dev</value>
      </setting>
      <setting name="BaseAddress" serializeAs="String">
        <value>http://localhost:10111</value>
      </setting>
      <setting name="Service" serializeAs="String">
        <value>Workflow</value>
      </setting>
      <setting name="AltBaseAddress" serializeAs="String">
        <value>http://localhost:10111</value>
      </setting>
    </Microservice.Workflow.Properties.Settings>
  </applicationSettings>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Autofac" publicKeyToken="17863af14b0044da" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.5.0.0" newVersion="3.5.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin.Security" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Http" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.2.0" newVersion="5.2.2.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Net.Http.Formatting" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.2.0" newVersion="5.2.2.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Http.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.2.0" newVersion="5.2.2.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="NHibernate" publicKeyToken="aa95f207798dfdb4" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.4.0.0" newVersion="3.4.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="NLog" publicKeyToken="5120e14c03d0593c" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.0.0" newVersion="4.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Common.Logging" publicKeyToken="af08829b84f0328e" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="log4net" publicKeyToken="669e0ddf0bb1aa2a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.3.0.0" newVersion="1.3.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

</configuration>