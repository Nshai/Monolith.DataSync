<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Microservice.Workflow"
                   namespace="Microservice.Workflow.Domain"
                   default-lazy="true"
                   default-access="property"
                   default-cascade="save-update"
                   schema="Workflow.dbo">

  <class name="TemplateTriggerSet" table="TTemplateTriggerSet">
    <id name="Id" column="TemplateTriggerSetId">
      <generator class="identity"/>
    </id>

    <property name="TriggerType" type="Microservice.Workflow.GenericEnumMapper`1[[Microservice.Workflow.Domain.TriggerType, Microservice.Workflow]], Microservice.Workflow" />

    <many-to-one name="TemplateVersion"
                class="TemplateVersion"
                column="TemplateVersionId"
                fetch="select" cascade="none"/>

    <property name="EventSubscriptionId"/>

    <property name="TenantId"/>

    <property name="PropertyList"
              column="TriggerList"
             type="Microservice.Workflow.XmlType`1[[Microservice.Workflow.Domain.TriggerPropertyList, Microservice.Workflow]], Microservice.Workflow"
             not-null="false" />

    <property name="ConcurrencyId"/>
  </class>

</hibernate-mapping>

